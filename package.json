{
  "name": "skyguruWeatherApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "i": "yarn && cd ios && pod install && cd ../",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "ios:dev": "react-native run-ios --device 'iPhone Nazar'",
    "start": "react-native start",
    "start:cache": "react-native start --reset-cache",
    "start:both": "react-native run-ios && react-native run-android",
    "start:both:dev": "react-native run-ios --device 'iPhone Nazar' && react-native run-android",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --fix --ext .ts,.tsx",
    "format": "prettier --check \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "format:fix": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "test": "jest --verbose",
    "test:update": "jest --verbose --updateSnapshot",
    "test:coverage": "jest --verbose --coverage",
    "test:watch": "jest --verbose --watch",
    "coverage": "jest --verbose --coverage && open ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@react-native-community/geolocation": "^2.0.2",
    "@react-native-community/netinfo": "^6.0.2",
    "axios": "^0.21.4",
    "lottie-react-native": "^5.1.4",
    "react": "18.1.0",
    "react-native": "0.70.4",
    "react-native-gesture-handler": "^2.9.0",
    "react-native-permissions": "^3.0.5",
    "react-native-reanimated": "^2.14.1",
    "react-native-svg": "^12.1.1",
    "react-native-svg-transformer": "^0.14.3",
    "react-redux": "^7.2.5",
    "redux": "^4.1.1",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/runtime": "^7.15.4",
    "@react-native-community/eslint-config": "^3.0.1",
    "@testing-library/jest-native": "^4.0.2",
    "@testing-library/react-native": "^7.2.0",
    "@types/jest": "^27.0.1",
    "@types/react": "^17.0.20",
    "@types/react-native": "^0.70.8",
    "@types/react-test-renderer": "^18.0.0",
    "@types/redux-mock-store": "^1.0.3",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "babel-jest": "^27.3.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-react-native": "^4.0.0",
    "jest": "^27.3.1",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "^2.3.2",
    "react-test-renderer": "18.1.0",
    "redux-mock-store": "^1.5.4",
    "typescript": "^4.4.2"
  },
  "resolutions": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2"
  }
}
